<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".ui.user.login.RegistrationFragment">

    <TextView
        android:id="@+id/registration_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="Регистрация"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/registration_edit_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:flow_horizontalAlign="center"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_banner">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/username_registration_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="23dp"
            android:minHeight="48dp"
            android:text="Заполните данные о себе:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/registration_banner" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/username_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="23dp"
            android:minHeight="48dp"
            android:text="Ваше имя"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_registration_banner" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/registration_birth_date"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="23dp"
            android:minHeight="48dp"
            android:text="Дата рождения"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_registration" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/registration_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="23dp"
            android:entries="@array/genders"
            android:minHeight="48dp"
            android:spinnerMode="dropdown"
            android:text="Пароль"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_login" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/registration_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="23dp"
            android:minHeight="48dp"
            android:inputType="textEmailAddress"
            android:text="Ваша почта"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_login" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/registration_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="23dp"
            android:minHeight="48dp"
            android:text="Пароль"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_login" />

        <androidx.appcompat.widget.AppCompatButton
            style="@android:style/Widget.Button"
            android:id="@+id/registration_btn_confirm"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/round_button_grad"
            android:text="СОЗДАТЬ АККАУНТ"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_login" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>