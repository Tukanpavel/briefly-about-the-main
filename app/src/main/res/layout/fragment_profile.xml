<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".ui.user.profile.profile.ProfileFragment">

    <TextView
        android:id="@+id/profile_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Профиль"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <GridLayout
        android:id="@+id/profile_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="2"
        android:background="@color/material_dynamic_neutral90"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_banner" >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_name_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Имя:"
            android:textColor="#0E1120"
            android:textSize="18sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#0E1120"
            android:textSize="18sp"
            android:layout_gravity="right"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_gender_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Пол:"
            android:textColor="#0E1120"
            android:textSize="18sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#0E1120"
            android:textSize="18sp"
            android:layout_gravity="right"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_birth_date_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Дата рождения:"
            android:textColor="#0E1120"
            android:textSize="18sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#0E1120"
            android:inputType="date"
            android:textSize="18sp"
            android:layout_gravity="right"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_email_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Email:"
            android:textColor="#0E1120"
            android:textSize="18sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#0E1120"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:layout_gravity="right"/>

    </GridLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile_history_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_info_container"
        android:background="@drawable/round_shape_button"
        android:layout_marginTop="50dp"
        android:text="История просмотров"/>

</androidx.constraintlayout.widget.ConstraintLayout>